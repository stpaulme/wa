{% extends "base.twig" %}

{% block content %}

	{% if post.content %}

		<div class="container">
			<div class="row">
				<div class="col">
					<h1>{{post.title}}</h1>
						{{post.content}}
				</div>
			</div>
		</div>

	{% else %}

		{% for module in post.get_field('modules') %}
		
			{% include 'partial/module.twig' ignore missing %}

		{% endfor %}

	{% endif %}

{% endblock %}