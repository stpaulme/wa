{% extends "base.twig" %}

{% block content %}
    <div class="search-pattern">
    <div class="container">
        <div class="row without-hero">
            <div class="col-md-7">
                <h1 class="title">{{title}}</h1>

                {% for post in posts %}
                    <div class="module">
                        <h3><a href="{{post.link}}">{{post.name}}</a></h3>
                        <p>{{post.preview.read_more('')}}</p>
                    </div>
			    {% endfor %}

                {% include 'partial/pagination.twig' %}
            </div>
        </div>
    </div>
    </div>
{% endblock %}