{% set image = TimberImage(module.image) %}

<div class="module hero">

    <div class="container">
        <div class="row">

            <div class="col-lg-7">
                <img alt="{{image.alt}}" class="hero-image" src="{{image.src|resize(3200, 2135, 'center')}}">
            </div>

            <div class="col-lg-5">

                <div class="hero-content">
                        
                    <div class="container">

                        <div class="row">

                            <div class="col-md-10 offset-md-1">

                                <h1 class="hero-heading">{{module.heading}}</h1>
                                <p class="hero-copy">{{module.copy}}</p>
                                {% if module.buttons %}
                                    <ul class="list-buttons">
                                        {% for button in module.buttons %}
                                            <li class="list-buttons-item"><a href="{{button.link.url}}" target="{{button.link.target}}" class="button button-primary">{{button.link.title}}</a></li>
                                        {% endfor %}
                                    </ul>
                                {% endif %}

                            </div>

                        </div>

                    </div>
                        
                </div>

            </div>

        </div>
    </div>

</div>