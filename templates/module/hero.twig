{% set image = TimberImage(module.image) %}

<div class="module hero" style="background-image: url({{image.src|resize(3000, 1000, 'center')}})">



    <div class="container">
        <div class="row">
          

            <div class="col-md-5">
                <h1>{{module.heading}}</h1>
                <p>{{module.copy}}</p>
                {% if module.buttons %}
                <ul class="list-inline">
                    {% for button in module.buttons %}
                    <li class="list-inline-item"><a class="btn btn-primary" href="{{button.link.url}}" target="{{button.link.target}}">{{button.link.title}}</a></li>
                    {% endfor %}
                </ul>
                {% endif %}
            </div>
        </div>
    </div>
   
</div>