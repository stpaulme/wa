<div class="module image-band">
    <div class="row no-gutters">

        {% for image in module.image_band %}
            <div class="col-md {{loop.index == 2 ? 'd-none d-md-block'}}">
                <img src="{{TimberImage(image.image).src|resize(1000,500)}}" class="image-{{loop.index}} mw-100">
            </div>
        {% endfor %}

     </div>
</div>