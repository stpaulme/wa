<div class="module cta-group {{module.background_pattern == true ? 'background-pattern'}}">
    <div class="container">

        {% if module.heading %}
        <div class="row">
            <div class="col">
                <h2>{{module.heading}}</h2>
            </div>
        </div>
        {% endif %}

        
        <div class="row">

            {% for cta in module.cta_group %}

                <div class="col-lg-4 cta">
                    
                    <div class="row">

                        {% if cta.image %}
                        <div class="col-md-6 col-lg-12">

                            
                                <img src="{{TimberImage(cta.image).src|resize(640,426)}}" class="cta-image">
                            

                        </div>
                        {% endif %}

                        <div class="col-md col-lg-12">

                            <div class="cta-text {{cta.image ? 'with-image' : 'without-image'}}">

                                {% if cta.heading %}
                                    <h3 class="cta-heading">{{cta.heading}}</h3>
                                {% endif %}

                                {% if cta.copy %}
                                    {{cta.copy}}
                                {% endif %}

                                {% if cta.link %}
                                    <a class="button button-primary" href="{{cta.link.url}}" target="{{cta.link.target}}">{{cta.link.title}}</a>
                                {% endif %}
                                
                            </div>

                        </div>

                    </div>

                </div>
            
            {% endfor %}

        </div>

    </div>
</div>