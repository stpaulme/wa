{% extends "base.twig" %}

{% block content %}

<div class="blog-pattern">
<div class="container">
	<div class="row">
		<div class="col-md-7">
			{% if title %}
				<h1 class="title">{{title}}</h1>
			{% endif %}

				<h2>Recent Posts</h2>

			{% for post in posts %}
				<div class="module single">
					<span class="date">{{post.date}}</span>
					<h3><a href="{{post.link}}">{{post.name}}</a></h3>
					<p>{{post.preview.read_more('')}}</p>
				</div>
			{% endfor %}

			{% include 'partial/pagination.twig' %}

		</div>
	</div>
</div>
</div>

{% endblock %}
